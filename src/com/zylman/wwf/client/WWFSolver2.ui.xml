<ui:UiBinder
	xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:gwt='urn:import:com.google.gwt.user.client.ui'
	xmlns:cell='urn:import:com.google.gwt.user.cellview.client'>
	<ui:style field="css" src="main.css" />
<gwt:ScrollPanel>
<gwt:HTMLPanel styleName="{css.page}">
	<gwt:HTMLPanel><h1>Words With Friends</h1></gwt:HTMLPanel>

	<gwt:HTMLPanel styleName="{css.column}">
	<gwt:HTMLPanel styleName="{css.centered}">
	<gwt:HTMLPanel><h2>Anagram Solver</h2></gwt:HTMLPanel>
		
		<gwt:Label>Requirements (* represents blank, can have up to two):</gwt:Label>
		<gwt:Grid>
		  <gwt:row>
		    <gwt:cell>Rack:</gwt:cell>
		    <gwt:customCell>
		    	<gwt:TextBox ui:field="rack"></gwt:TextBox>
		    </gwt:customCell>
		  </gwt:row>
		  <gwt:row>
		    <gwt:cell>Starts with:</gwt:cell>
		    <gwt:customCell>
		    	<gwt:TextBox ui:field="start"></gwt:TextBox>
		    </gwt:customCell>
		  </gwt:row>
		  <gwt:row>
		    <gwt:cell>Contains:</gwt:cell>
		    <gwt:customCell>
		    	<gwt:TextBox ui:field="contains"></gwt:TextBox>
		    </gwt:customCell>
		  </gwt:row>
		  <gwt:row>
		    <gwt:cell>Ends with:</gwt:cell>
		    <gwt:customCell>
		    	<gwt:TextBox ui:field="end"></gwt:TextBox>
		    </gwt:customCell>
		  </gwt:row>
		  <gwt:row>
		    <gwt:customCell>
		    	<gwt:Button ui:field="sendButton">Solve</gwt:Button>
		    </gwt:customCell>
		  </gwt:row>
		  <gwt:row>
		    <gwt:customCell>
		    	<gwt:Label ui:field="errorLabel"></gwt:Label>
		    </gwt:customCell>
		  </gwt:row>
		</gwt:Grid>
		<cell:CellTable ui:field="results"></cell:CellTable>
	</gwt:HTMLPanel>
	</gwt:HTMLPanel>
	
	<gwt:HTMLPanel styleName="{css.column-spacer}"></gwt:HTMLPanel>
	
	<gwt:HTMLPanel styleName="{css.column}">
		<gwt:HTMLPanel><h2>Word Value</h2></gwt:HTMLPanel>
		<gwt:Grid>
			<gwt:row>
				<gwt:cell>Word:</gwt:cell>
				<gwt:customCell>
					<gwt:TextBox ui:field="test"></gwt:TextBox>
				</gwt:customCell>
			</gwt:row>
		</gwt:Grid>
		<br />
		<gwt:Label ui:field="testResults"></gwt:Label>
	</gwt:HTMLPanel>
</gwt:HTMLPanel>
</gwt:ScrollPanel>
</ui:UiBinder>
